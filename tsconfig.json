{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react", // This enables JSX support
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
